# Survey Automation Framework Environment Variables

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Browser Configuration
HEADLESS=true
BROWSER_WIDTH=1024
BROWSER_HEIGHT=768

# Scheduler Configuration
SCHEDULER_INTERVAL_HOURS=4
SCHEDULER_ENABLED=true

# Security
ENCRYPTION_KEY=your-encryption-key-here
CONFIG_FILE_PATH=./config/profile.yaml.enc

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/survey-automation.log

# Skyvern Configuration (if needed)
SKYVERN_API_KEY=your-skyvern-api-key
SKYVERN_BASE_URL=https://api.skyvern.com

# Development
DEVELOPMENT_MODE=true
MOCK_SURVEYS=false
